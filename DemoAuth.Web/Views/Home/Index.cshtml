@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="DemoAuthApp" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#!/home">DemoAuth</a>
            </div>
            <div class="navbar-collapse collapse" ng-controller="mainCtrl">
                <ul class="nav navbar-nav">
                    <li><a href="#!/home">Home</a></li>
                    <li><a href="#!/state">State</a></li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
                <form ng-hide="isLoggedIn()" class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="username (email)" ng-model="userData.email" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="password" ng-model="userData.password" />
                    </div>
                    <input type="submit" class="btn btn-default" value="Login" ng-click="login()" />
                    <input type="submit" class="btn btn-default" value="Register" ng-click="registerUser()" />
                    <div class="bg-danger" ng-show="message">{{message}}</div>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div ng-view></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/app/DemoAuthApp.js"></script>
    <script src="~/app/mainCtrl.js"></script>
    <script src="~/app/userAccount.js"></script>
    <script src="~/app/currentUser.js"></script>
    <script src="~/app/stateCtrl.js"></script>
</body>
</html>